{
  "manifest_version": 3,
  "name": "Tabmangment",
  "version": "3.8",
  "description": "Professional tab management with auto-closing, timers, and premium features",
  
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "bookmarks",
    "browsingData",
    "identity",
    "scripting"
  ],

  "host_permissions": [
    "https://buy.stripe.com/*",
    "https://*.netlify.app/*",
    "https://tabmangment.com/*",
    "https://api.emailjs.com/*",
    "https://billing.stripe.com/*",
    "https://www.googleapis.com/*",
    "https://js.stripe.com/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tabmangment"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://tabmangment.com/*",
        "https://*.netlify.app/*",
        "http://localhost/*",
        "https://localhost/*"
      ],
      "js": ["dashboard-sync.js"],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": [
        "https://*.netlify.app/*",
        "http://localhost/*",
        "https://localhost/*",
        "file://*/user-dashboard.html"
      ],
      "js": ["dashboard-bridge.js"],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": [
        "*://*.stripe.com/*",
        "*://*/success*",
        "*://*/payment*",
        "*://*/*success*",
        "*://*/*payment*"
      ],
      "js": ["success-page-activator.js"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://buy.stripe.com https://*.netlify.app https://tabmangment.com https://api.emailjs.com https://billing.stripe.com https://js.stripe.com https://www.googleapis.com/*;"
  },

  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ],

  "externally_connectable": {
    "matches": [
      "https://tabmangment.com/*",
      "https://*.netlify.app/*",
      "http://localhost/*",
      "https://localhost/*"
    ]
  }
}